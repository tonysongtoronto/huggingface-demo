{
  "name": "huggingface-demo",
  "version": "1.0.0",
  "description": "Full stack application with Node.js backend and Angular frontend",
  "scripts": {
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && ng serve",
    "start:dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:all": "concurrently -n \"BACKEND,FRONTEND\" -c \"blue,green\" \"npm run start:backend\" \"npm run start:frontend\"",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:all": "npm run install:backend && npm run install:frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}